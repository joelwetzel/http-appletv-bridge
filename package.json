{
  "name": "http-appletv-bridge",
  "description": "IN DEVELOPMENT: A bridge server that can run on a Raspberry Pi.  It will connect to your Apple TV, and expose its power state via a simple HTTP interface.",
  "version": "0.1.1",
  "main": "dist/http-appletv-bridge.js",
  "scripts": {
    "start": "npm run check-pyatv && npm run buildWithReload & nodemon dist/http-appletv-bridge.js",
    "build": "mkdir -p ./dist && cp ./src/config.env ./dist/config.env && tsc",
    "buildWithReload": "mkdir -p ./dist && cp ./src/config.env ./dist/config.env && ./node_modules/typescript/bin/tsc -w",
    "clean": "rm -rf dist",
    "check-pyatv": "pip list | grep pyatv || npm run install-pyatv",
    "install-pyatv": "pip install pyatv"
  },
  "bin": "./dist/http-appletv-bridge.js",
  "keywords": [],
  "author": "",
  "license": "Apache 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/joelwetzel/http-appletv-bridge.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@types/node": "^20.5.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "node": "^20.7.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.5",
    "nodemon": "^3.0.1"
  }
}
